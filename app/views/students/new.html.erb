Ext.onReady(function(){
    Ext.QuickTips.init();
    // turn on validation errors beside the field globally
    Ext.form.Field.prototype.msgTarget = 'side';
    var bd = Ext.getBody();
    bd.createChild();
    var simple = new Ext.FormPanel({
        labelWidth: 150, // label settings here cascade unless overridden
        url:'/students/show',
        frame:true,
        bodyStyle:'padding:5px 0px 0',
        width: 500,
        defaults: {width: 250},
        defaultType: 'textfield',
        title:'Student Entry form',

        items: [{
                fieldLabel: 'First Name',
                name: 'first_name',
                allowBlank:false
            },{
                fieldLabel: 'Father Name',
                name: 'father_name'
            },{
                fieldLabel: 'Grand Father Name',
                name: 'grand_father_name'
            }, new Ext.form.ComboBox({
                store: ['Female','Male'],
                displayField: 'Sex',
                valueField: 'sex',
                editable: false,                
                forceSelection: true,
                triggerAction: 'all',
                selectOnFocus: true
                })
            , {
                fieldLabel: 'Email',
                name: 'email',
                vtype:'email'
            }, new Ext.form.DateField({
                fieldLabel: 'Birth Date',
                name: 'birth_date'
                
            })
        ],

        buttons: [{
            text: 'Save'
        },{
            text: 'Cancel'
        }]
    });

    simple.render(document.getElementById('student_entry'));

});
</script>
