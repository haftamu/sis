<%= form_tag students_show_path, :method => 'get' do %>
  <%= label_tag "Search by name" %>
  <%= text_field_tag :name, params[:name] %>
  <%= submit_tag "Submit" %>
<% end %>

  <p> Search results </p>
<% if @student.empty? %>
  <p> No such Record </p> 
<% else %>
  <table border="+1">
    <tr>
      <td>Id</td>
      <td>Name</td>
      <td>Middle Name</td>
      <td>Last Name</td>
      <td>Sex</td>
    </tr>
    
    <% for student in @student %>
       <tr>
      <td><%= student.id %></td>
      <td><%= student.first_name %></td>
      <td><%= student.middle_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.sex %></td>
      </tr>
    <% end %>
   
  </table>
<% end %>

